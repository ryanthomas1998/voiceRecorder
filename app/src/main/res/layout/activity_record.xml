
<android.support.design.widget.CoordinatorLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto" android:windowActionBar="false"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:fitsSystemWindows="true"
    style="@style/Theme.AppCompat.NoActionBar">



    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context="com.example.gus.voicerecorder.RecordActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recording Time"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:textSize="35sp"
            android:textColor="@color/recordText"
            android:id="@+id/clockLbl"/>
        <Chronometer
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chrono"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/clockLbl"
            android:gravity="center_horizontal"
            android:textSize="70sp"
            android:textColor="@color/recordText"
            android:format="%s"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/arty"
            android:layout_marginTop="30dp"
            android:id="@+id/mic"
            android:layout_below="@id/chrono"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="end|bottom"
        android:background="#D8D8D8"
        android:elevation="3dp"
        android:weightSum="3"
        android:transitionName="bottom"
        android:orientation="horizontal"
        android:id="@+id/bottomBar"
        >
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/pause"
            />
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/stop"
            />
        
    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="125dp" android:layout_height="125dp"
        android:layout_margin="15dp" app:layout_anchor="@id/bottomBar"
        android:id="@+id/record"
        android:transitionName="fab"
        app:layout_anchorGravity="top|center" android:src="@drawable/microphone" />
</android.support.design.widget.CoordinatorLayout>

