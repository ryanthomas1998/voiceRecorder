<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recording Info"
        android:fontFamily="sans-serif-light"
        android:textSize="25sp"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/drawer_label"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1:23"
        android:layout_margin="10dp"
        android:id="@+id/duration"
        android:layout_below="@+id/drawer_label"
        android:layout_alignParentEnd="true"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duration: "
        android:id="@+id/duration_label"
        android:layout_margin="10dp"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textSize="20sp"
        android:layout_below="@+id/drawer_label"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MP3"
        android:layout_margin="10dp"
        android:id="@+id/filetype"
        android:layout_below="@+id/duration_label"
        android:layout_alignParentEnd="true"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="File Type: "
        android:id="@+id/filetype_label"
        android:layout_margin="10dp"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textSize="20sp"
        android:layout_below="@+id/duration_label"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AAC"
        android:layout_margin="10dp"
        android:id="@+id/codec"
        android:layout_below="@+id/filetype_label"
        android:layout_alignParentEnd="true"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Codec: "
        android:id="@+id/codec_label"
        android:layout_margin="10dp"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textSize="20sp"
        android:layout_below="@+id/filetype_label"
        android:layout_alignParentStart="true" />


</RelativeLayout>